// Platzieren Sie Ihre Einstellungen in dieser Datei, um die Standardeinstellungen zu Ã¼berschreiben.
{
    "extensions.ignoreRecommendations": false,
    "terminal.external.windowsExec": "C:\\WINDOWS\\sysnative\\WindowsPowerShell\\v1.0\\powershell.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    // "terminal.external.windowsExec": "C:\\WINDOWS\\sysnative\\WindowsPowerShell\\v1.0\\powershell.exe",
    // Most Commonly Used
    // Controls auto save of dirty files. Accepted values:  "off", "afterDelay", "onFocusChange" (editor loses focus), "onWindowChange" (window loses focus). If set to "afterDelay", you can configure the delay in "files.autoSaveDelay".
    "files.autoSave": "off",
    // Controls the font family.
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    // Controls how the editor should render whitespace characters, possibilities are 'none', 'boundary', and 'all'. The 'boundary' option does not render single spaces between words.
    "editor.renderWhitespace": "none",
    // Enable crash reports to be sent to Microsoft.
    // This option requires restart to take effect.
    "telemetry.enableCrashReporter": false,
    // Aktivieren Sie das Senden von Nutzungsdaten und Fehlern an Microsoft.
    "telemetry.enableTelemetry": false,
    "workbench.colorTheme": "1337",
    "workbench.iconTheme": "material-icon-theme",
    "window.zoomLevel": 0,
    "editor.snippetSuggestions": "top",
    "window.menuBarVisibility": "default",
    "workbench.sideBar.location": "left",
    "editor.mouseWheelZoom": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "extensions.autoUpdate": false,
    "editor.minimap.enabled": false,
    "window.enableMenuBarMnemonics": false,
    "editor.renderIndentGuides": true,
    "editor.showFoldingControls": "always",
    "editor.lineNumbers": "relative",
    "workbench.colorCustomizations": {
        "statusBar.background": "#005F5F",
        "statusBar.noFolderBackground": "#005F5F",
        "statusBar.debuggingBackground": "#005F5F",
        "editorIndentGuide.activeBackground": "#5c5ada"
    },
    "workbench.activityBar.visible": true,
    "[asciidoc]": {
        "editor.wordWrapColumn": 120,
        "editor.wordWrap": "wordWrapColumn",
        "editor.insertSpaces": true
    },
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.enabled": false,
    "gitlens.keymap": "none",
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "markdown-pdf.executablePath": "C:\\Users\\r.brudna\\AppData\\Local\\Google\\Chrome\\Application\\chrome.exe",
    "java.errors.incompleteClasspath.severity": "ignore",
    "go.gopath": "~/Projects/HomeWork.go",
    //
    // Vim configuration
    //"vim.leader": "<space>",
    "vim.leader": ",",
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [ "j", "j" ],
            "after": [ "<Esc>" ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "<leader>", "d" ],
            "after": [ "d", "d" ]
        },
        {
            "before": [ "<C-n>" ],
            "after": [],
            "commands": [ { "command": ":nohl" } ]
        },
        {
            "before": ["<leader>", "m"],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": ["<leader>", "b"],
            "commands": [
                "bookmarks.list"
            ]
        },

    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },

    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": "#005F5F",
    "vim.statusBarColors.insert": "#0033CC",
    "vim.statusBarColors.visual": "#5F0000",
    "vim.statusBarColors.visualline": "#5F0000",
    "vim.statusBarColors.visualblock": "#5F0000",
    "vim.statusBarColors.replace": "#0099FF",

    //"vim.statusBarColors.normal": "#8FBCBB",
    //"vim.statusBarColors": {
    //    "normal": "#005f5f",
    //    "insert": "#5f0000",
    //    "visual": "#5f00af",
    //    "visualline": "#005f87",
    //    "visualblock": "#86592d",
    //    "replace": "#000000"
    //},
    "vim.easymotion" : true,
    "vim.surround" : true,
}